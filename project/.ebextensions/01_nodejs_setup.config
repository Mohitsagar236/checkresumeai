packages:
  yum:
    nodejs: []
    npm: []

commands:
  01_install_typescript:
    command: "npm install -g typescript@latest"
    ignoreErrors: false
  02_add_npm_global_path:
    command: "echo 'export PATH=$PATH:/usr/lib/node_modules/.bin' >> /etc/environment"
    ignoreErrors: true
  03_source_environment:
    command: "source /etc/environment"
    ignoreErrors: true
  04_verify_typescript:
    command: "/usr/lib/node_modules/.bin/tsc --version || echo 'TypeScript not found'"
    ignoreErrors: true
