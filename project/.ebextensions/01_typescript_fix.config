commands:
  01_install_typescript_global:
    command: "npm install -g typescript@latest"
    ignoreErrors: false
  02_verify_typescript:
    command: "tsc --version"
    ignoreErrors: false
  03_install_backend_deps:
    command: "cd backend && npm install --include=dev"
    ignoreErrors: false
  04_build_backend_local:
    command: "cd backend && npx tsc || ./node_modules/.bin/tsc"
    ignoreErrors: false

option_settings:
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    PORT: 8080
